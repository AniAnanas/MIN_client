<Window x:Class="Client.Front.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Front"
        xmlns:vm="clr-namespace:Client.Front.ViewModels"
        xmlns:Controls="clr-namespace:Client.Front.Controls"
        mc:Ignorable="d"
        Title="MainWindow"
        d:Width="1920" 
        d:Height="1080"
        Icon="/content/icon1.png"
        Background="#FF1F1F1F" WindowStyle="None">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="280"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto" MinWidth="280"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <!--<RowDefinition Height="30"/>-->
        </Grid.RowDefinitions>

        <Controls:TopBarUI x:Name="topBar"
             Grid.Row="0" 
             Grid.Column="0" 
             Grid.ColumnSpan="3" 
             MinimizeClicked="TopBar_MinimizeClicked"
             MaximizeClicked="TopBar_MaximizeClicked"
             CloseClicked="TopBar_CloseClicked"/>

        <Border Name="LeftBorder"
             Grid.Column="0"
             Grid.Row="1"
             Background="Transparent"
             BorderBrush="#4C000000"
             BorderThickness="2"
             CornerRadius="15"
             Margin="7">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Name="ChatStackPanel" Grid.Row="0">
                    <ListBox ItemsSource="{Binding Chats}" SelectedItem="{Binding SelectedChat}" 
                        BorderThickness="0" Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Controls:TabUI/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <Controls:AddButtonUI Grid.Row="1" Clicked="AddPerson_Clicked" />
            </Grid>

        </Border>

        <Border x:Name="CenterBorder"
            Grid.Column="1"
            Grid.Row="1"
            Background="Transparent"
            BorderBrush="#4C000000"
            BorderThickness="2"
            CornerRadius="15"
            Margin="0,7">
            <Controls:ChatUI/>
        </Border>

        <Border x:Name="RightBorder"
            Grid.Column="2"
            Grid.Row="1"
            Background="Transparent"
            BorderBrush="#4C000000"
            BorderThickness="2"
            CornerRadius="15"
            Margin="7">
        </Border>
    </Grid>
</Window>
